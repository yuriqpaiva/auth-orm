{
  "openapi": "3.0.0",
  "info": {
    "title": "Auth ORM",
    "description": "Simple authentication API with secure routes",
    "termsOfService": "http://localhost:3000",
    "contact": {
      "email": "yuriqpaiva@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [{"url": "http://localhost:3000", "description": "Test API"}],
  "paths": {
    "/users": {
      "get": {
        "summary": "Find All users",
        "description": "Bring all users registered on database",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "All users were find",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "type": "array",
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create user",
        "description": "Get request body and register a user",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "testuser@email.com",
                    "password": "testpassword"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "description": "Find a product by ID",
        "summary": "Find a product by ID",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID to search for",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "User was find",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "Update a product by ID",
        "summary": "Update a product by ID",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "User ID to search for",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "newtestmail@email.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User was find",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "verified": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
